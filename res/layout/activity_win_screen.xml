<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/win"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WinScreen" >

 <TextView
     android:id="@+id/WinMessageTextView"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="20dp"
     android:gravity="center_horizontal"
     android:text="@string/win_message"
     android:textSize="@dimen/messageSize" />

    <Button
        android:id="@+id/HomeButton"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/WinMessageTextView"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="113dp"
        android:background="@android:color/transparent"
        android:onClick="gotoHome" />

    <TextView
        android:id="@+id/winScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/HomeButton"
        android:layout_below="@+id/WinMessageTextView"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="39dp"
        android:text="@string/userScore"
        android:textSize="@dimen/textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/winScoreTextView"
        android:layout_alignBottom="@+id/winScoreTextView"
        android:layout_alignRight="@+id/HomeButton"
        android:layout_marginRight="52dp"
        android:text="@string/score_textview"
        android:textSize="@dimen/textSize" />

</RelativeLayout>
